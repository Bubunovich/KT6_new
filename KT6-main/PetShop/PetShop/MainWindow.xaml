<Window x:Class="PetShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PetShop"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000" 
        MaxHeight="600" MaxWidth="1000" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#FF76E383">
            <Image Source="/Image/logo.png" HorizontalAlignment="Left" 
                   VerticalAlignment="Center" Margin="260,0,0,0"></Image>
            <Label Content="Товары для животных" HorizontalAlignment="Center" 
                   VerticalAlignment="Center" FontSize="24"></Label>
        </Grid>
        <Frame Grid.Row="1" x:Name="MainFrame"></Frame>
    </Grid>
</Window>
